# Stats Lab Manager - EC2 Production Environment
# Copy this file to .env and fill in the values

# Database Configuration
DB_USER=statslab
DB_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
DB_NAME=statslab

# JWT Secret - generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_STRING

# Domain name
DOMAIN=utahvalleyresearchlab.com

# CORS Origin - restrict to your domain with HTTPS
CORS_ORIGIN=https://utahvalleyresearchlab.com

# Frontend API URL - use /api for same-origin requests (recommended)
VITE_API_URL=/api

# Optional: Email for Let's Encrypt certificate expiry notifications
# CERTBOT_EMAIL=admin@utahvalleyresearchlab.com

# Email (optional - emails logged to console if not set)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@utahvalleyresearchlab.com
CONTACT_EMAIL=
APP_URL=https://utahvalleyresearchlab.com

# Optional: Anthropic API key for AI features
# ANTHROPIC_API_KEY=sk-ant-...
